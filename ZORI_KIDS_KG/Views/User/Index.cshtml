@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ZORI_KIDS_KG.Models.Parinte

<section class="section-profile-cover section-shaped my-0">
    <div class="shape shape-style-1 shape-dark ">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
   
    <div class="separator separator-bottom separator-skew">
        <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <polygon class="fill-white" points="2560 0 2560 100 0 100"></polygon>
        </svg>
    </div>
</section>
<section class="section">
    <div class="container">
        <div class="card card-profile shadow mt--300">
            <div class="px-4">
                <div class="row justify-content-center">
                    <div class="col-lg-3 order-lg-2">
                        <div class="card-profile-image">
                            <a asp-action="UploadPicture">
                                @*@if (userDefinedPic == null)*@
                                @*{*@
                                @if (User.IsInRole("Utilizator"))
                                {
                                    @if (Model.Sex == "Masculin")
                                    {
                                        <img src="~/assets/img/theme/man.png" style="max-width:220px" class="rounded-circle">
                                    }
                                    else if (Model.Sex == "Feminin")
                                    {
                                        <img src="~/assets/img/theme/girl.png" style="max-width:200px" class="rounded-circle">
                                    }
                                }
                                @*}*@
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 order-lg-3 text-lg-right align-self-lg-center">
                        <div class="card-profile-actions py-4 mt-lg-0">
                            @*<a asp-action="Copil" class="btn btn-sm btn-info mr-4">Vezi Copil</a>
                            <a asp-action="Asociatie" class="btn btn-sm btn-warning float-right">Vezi Asociatie</a>*@
                        </div>
                    </div>
                    <div class="col-lg-4 order-lg-1 text-lg-left align-self-lg-center">
                        <div class="card-profile-stats d-flex justify-content-center">
                            <div>
                                <span class="description">                                    
                                        @*<a asp-action="AddCopil" class="btn btn-sm btn-info mr-4">Adauga Copil</a>                                                                       
                                    <a asp-action="AddAsociatie" class="btn btn-sm btn-warning float-right">Adauga Asociatie</a>*@
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-5">
                    <h4>Bun venit!</h4>
                    <h3>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Utilizator"))
                            {
                                @this.User.Identity.Name
                            }
                        }
                        else
                        {
                            <span> This can't happen </span>
                        }
                    </h3>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Cnp).ToUpper() : @Model.Cnp</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Nume) : @Model.Nume</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Prenume) : @Model.Prenume</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Sex) : @Model.Sex</div>
                    <div id="asd" class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>Data nasterii : @Model.Varsta.ToShortDateString()</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Telefon) : @Model.Telefon</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Localitate) : @Model.Localitate</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Judet) : @Model.Judet</div>
                    <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>@nameof(Model.Adresa) : @Model.Adresa</div>
                </div>
                <div class="mt-5 py-5 border-top text-center">
                    <div class="row justify-content-center">
                        <div class="col-lg-9">
                            <a asp-action="Edit">Editeaza informatii</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}