@model ZORI_KIDS_KG.Models.Roles
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
</section>
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New Role</h3>
                </div>
                <form class="form-horizontal" method="post" asp-action="Create">
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Title" class="col-sm-3 control-label"></label>
                            <div class="input-group col-xs-6">
                                <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                                <input asp-for="Title" type="text" class="form-control" placeholder="functie...">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="col-sm-3 control-label"></label>
                            <div class="input-group col-xs-6">
                                <span class="input-group-addon"><i class="fa fa-commenting-o"></i></span>
                                <input asp-for="Description" type="text" class="form-control" placeholder="descriere...">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        </div>
                    <div class="box-footer">
                        <button type="button" onclick="Redirect();" class="btn-lg btn-default">Renunta</button>
                        <button type="submit" class="btn-lg btn-info pull-right">Adauga</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>        
        function Redirect() {
            window.location = "/Roles/Index";
        }

    </script>
}