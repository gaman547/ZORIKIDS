@model ZORI_KIDS_KG.Models.Admins
@{
    ViewData["Title"] = "Create Admin";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<section class="content-header">
    <h1>
        Administratori
    </h1>
</section>
<section class="content container-fluid">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Adauga informatii administratori</h3>
        </div>
        <form class="form-horizontal" method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="FullName" class="col-sm-3 control-label"></label>
                    <div class="input-group col-xs-6">
                        <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Adauga nume complet">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-sm-3 control-label"></label>
                    <div class="input-group col-xs-6">
                        <span class="input-group-addon"><i class="fa fa-envelope-open-o"></i></span>
                        <input asp-for="Email" type="text" class="form-control" placeholder="Email admin">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-sm-3 control-label"></label>
                    <div class="input-group col-xs-6">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input asp-for="Password" type="text" class="form-control" placeholder="Parola admin">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RolesId" class="col-sm-3 control-label"></label>
                    <div class="input-group col-xs-6">
                        <span class="input-group-addon"><i class="fa fa-envelope-open-o"></i></span>
                        @Html.DropDownList("RolesId", null, htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="RolesId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" onclick="Redirect();" class="btn-lg btn-default">Renunta</button>
                <button type="submit" class="btn-lg btn-info pull-right">Adauga</button>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/dist/jquery.mask.min.js"></script>

    <script>       
        function Redirect() {
            window.location = "/Admins/Index";
        }

    </script>
}