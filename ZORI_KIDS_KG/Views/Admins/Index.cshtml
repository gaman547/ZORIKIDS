@model IEnumerable<ZORI_KIDS_KG.Models.Admins>

@{
    ViewData["Title"] = "Admins";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<section class="content-header">
    <h1>
        Administratori
    </h1>
</section>
<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tabel informatii administratori</h3>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>                                
                                <th>Nume complet</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Functii</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Roles.Title)
                                    </td>
                                    <td>
                                        <a href="/Admins/Edit/@item.Id">Update</a> |
                                        <a href="" onclick="Delete('@item.Id')">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })

    $(function () {
        $('#example1').DataTable();
    });
    function Delete(id){
        var txt;
        var r = confirm("Sigur vrei sa stergi?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Admins")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl = "/Admins";
                        window.location.reload(true);
                    }
                    else {
                        alert("Exista o problema!");
                    }
                }
            });
        }
    }
</script>