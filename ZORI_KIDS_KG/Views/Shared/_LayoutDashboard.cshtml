@{
    ViewData["Title"] = "_LayoutDashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="~/bower_components/morris.js/morris.css">
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <link href="~/css/tree.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a asp-controller="Dashboard" asp-action="Index" class="logo">                
                <span class="logo-mini"><b>Z</b>K</span>                
                <span class="logo-lg"><b>ZORI</b>Kids</span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">                
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>                
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">                        
                        <li class="dropdown user user-menu">                            
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">                                
                                <img src="~/assets/img/theme/logo.jpg" style="max-width:200px" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">Administrator</span>
                            </a>
                            <ul class="dropdown-menu">                                
                                <li class="user-header">
                                    <img src="~/assets/img/theme/logo.jpg" style="max-width:200px" class="img-circle" alt="User Image">
                                    <p>
                                        Administrator
                                        <small>Membru din Sept. 2019</small>
                                    </p>
                                </li>                                
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a asp-controller="Home" asp-action="Index">Pagina principala</a>
                                        </div>
                                    </div>                                    
                                </li>                                
                                <li class="user-footer">
                                    <div class="pull-left">
                                        @*<a href="#" class="btn btn-default btn-flat">Profile</a>*@
                                    </div>
                                    <div class="pull-right">
                                        <a asp-controller="Security" asp-action="Logout" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>        
        <aside class="main-sidebar">            
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @*<div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/assets/img/theme/logo.jpg" style="max-width:50px" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Administrator</p>
                        
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>*@
                <!-- search form (Optional) -->
                @*<form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Cauta...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>*@
                <!-- /.search form -->
                <!-- Sidebar Menu -->

                <ul class="sidebar-menu" data-widget="tree">

                    <li class="treeview">
                        <a asp-controller="Parinte" asp-action="Index">
                            <i class="fa fa-user"></i> <span>Parinte</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Parinte" asp-action="Create">Adauga</a></li>
                            <li><a asp-controller="Parinte" asp-action="Index">Vezi lista</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a asp-controller="Asociatie" asp-action="Index">
                            <i class="fa fa-group"></i> <span>Asociatie</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Asociatie" asp-action="Create">Adauga</a></li>
                            <li><a asp-controller="Asociatie" asp-action="Index">Vezi lista</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a asp-controller="Copil" asp-action="Index">
                            <i class="fa fa-child"></i> <span>Copil</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Copil" asp-action="Create">Adauga</a></li>
                            <li><a asp-controller="Copil" asp-action="Index">Vezi lista</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a asp-controller="Admins" asp-action="Index">
                            <i class="fa fa-warning"></i> <span>Admins</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Admins" asp-action="Create">Adauga</a></li>
                            <li><a asp-controller="Admins" asp-action="Index">Vezi lista</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a asp-controller="Roles" asp-action="Index">
                            <i class="fa fa-wheelchair"></i> <span>Roles</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Roles" asp-action="Create">Adauga</a></li>
                            <li><a asp-controller="Roles" asp-action="Index">Vezi lista</a></li>
                        </ul>
                    </li>
                </ul>
                                              
            </section>            
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <small>&copy; 2019 Dezvoltat de <a asp-controller="Home" asp-action="AboutME"> Gabriel Kopacz</a> | Toate drepturile rezervate | pentru <a asp-controller="Home" asp-action="Despre">ZORI-Kids</a></small>
        </footer>
    </div>

    <script src="~/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

